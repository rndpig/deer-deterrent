# =============================================================================
# Deer Deterrent System - Environment Configuration
# =============================================================================
# This file contains configuration for both RPi and Dell deployments
# For Dell-specific deployment, also see .env.dell
# =============================================================================

# =============================================================================
# Network Configuration
# =============================================================================
DELL_SERVER_IP=192.168.1.200
TIMEZONE=America/New_York

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=deer_deterrent
POSTGRES_USER=deeruser
POSTGRES_PASSWORD=ChangeThisToASecurePassword123!

# =============================================================================
# Ring Camera Configuration
# =============================================================================
RING_USERNAME=your_ring_email@example.com
RING_PASSWORD=your_ring_password
RING_2FA_METHOD=email
RING_2FA_TOKEN=  # If 2FA is enabled
RING_REFRESH_TOKEN=

# =============================================================================
# MQTT Configuration
# =============================================================================
MQTT_USER=
MQTT_PASSWORD=

# =============================================================================
# Rainbird Controller Configuration
# =============================================================================
RAINBIRD_HOST=192.168.1.xxx  # IP address of your Rainbird controller
RAINBIRD_IP=192.168.1.xxx
RAINBIRD_PASSWORD=your_rainbird_password
RAINBIRD_ZONE=1
RAINBIRD_DURATION_SECONDS=30

# =============================================================================
# ML Detection Configuration
# =============================================================================
YOLO_MODEL_PATH=/app/models/production/best.pt
MODEL_PATH=models/production/best.pt
CONFIDENCE_THRESHOLD=0.75
IOU_THRESHOLD=0.45
DEVICE=cpu

# =============================================================================
# Google Drive (for ML training automation)
# =============================================================================
# Follow docs/GOOGLE_DRIVE_SETUP.md for setup instructions
GOOGLE_DRIVE_CREDENTIALS_PATH=configs/google-credentials.json
GOOGLE_DRIVE_TRAINING_FOLDER_ID=your_folder_id_here  # From Drive URL
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here  # Legacy, for dataset download
GOOGLE_CREDENTIALS_PATH=configs/google_credentials.json

# =============================================================================
# Coordinator Configuration
# =============================================================================
DETECTION_INTERVAL=2  # Seconds between checks
COOLDOWN_PERIOD=300  # Seconds before same zone can be triggered again
COOLDOWN_SECONDS=300
ENABLE_IRRIGATION=false

# =============================================================================
# Irrigation Settingss
# =============================================================================
IRRIGATION_DURATION=30  # Seconds to run irrigation
ACTIVE_HOURS_START=0  # 24-hour format (0-23)
ACTIVE_HOURS_END=24   # 24-hour format (0-23)

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET_KEY=ChangeThisToARandomSecretKey789!
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://192.168.1.200:8000

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://192.168.1.200:3000

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/deer_deterrent.log

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_DASHBOARD=true
SAVE_DETECTION_SNAPSHOTS=true
SAVE_DEER_SNAPSHOTS_ONLY=false

# =============================================================================
# NOTES FOR DELL DEPLOYMENT:
# =============================================================================
# 1. Copy this file to .env.dell for Dell-specific settings
# 2. Update DELL_SERVER_IP with your Dell's static IP
# 3. Update RAINBIRD_IP with your Rainbird controller's IP
# 4. Change all passwords (POSTGRES_PASSWORD, JWT_SECRET_KEY)
# 5. Test with ENABLE_IRRIGATION=false first
# 6. Get RING_REFRESH_TOKEN from http://YOUR_DELL_IP:55123
# =============================================================================
